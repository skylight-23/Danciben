<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="gone" android:id="@+id/textId"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:id="@+id/textViewWord"
        android:textSize="@dimen/abc_text_size_title_material"
        android:text="Word"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:id="@+id/textViewMeaning"
        android:text="Meaning"
        android:layout_marginLeft="20dp"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:id="@+id/textViewSample"
        android:text="Sample"
        android:layout_marginLeft="20dp"/>
</LinearLayout>